<!DOCTYPE html>
<html>
<% include ../partials/head.ejs %>
<body>
<% include ../partials/header.ejs %>
<div class="ui container main admin-menu">
    <h1 class="ui header">New Post</h1>
    <form action="/posts" method="post" class="ui form">
        <div class="field">
            <label id="title">Title:</label>
            <input type="text" for="title" name="title"/>
        </div>
        <div class="field">
            <label id="summary">Summary:</label>
            <textarea for="summary" name="summary"></textarea>
        </div>
        <div class="field">
            <label id="category_type">Category Type:</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="category"/>
                <i class="dropdown icon"></i>
                <div class="default text">Select one...</div>
                <div class="menu">
                    <% categories.forEach(function(category){ %>
                    <div class="item" data-value="<%= category._id %>"><%= category.description %></div>
                    <% }) %>
                </div>
            </div>
        </div>
        <div class="field">
            <label id="category_type">Author:</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="author"/>
                <i class="dropdown icon"></i>
                <div class="default text">Select one...</div>
                <div class="menu">
                    <% authors.forEach(function(author){ %>
                    <div class="item" data-value="<%= author.name %>"><%= author.name %></div>
                    <% }) %>
                </div>
            </div>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
    <div class="ui hidden divider">
        <a href="/posts">Go Back</a>
    </div>



</div>
<% include ../partials/footer.ejs %>
</body>
</html>
