<!DOCTYPE html>
<html>
<% include ../partials/head.ejs %>
<body>
<% include ../partials/header.ejs %>
<div class="ui container main admin-menu">
    <h1 class="ui header">Categories</h1>
    <table class="ui table">
        <thead>
        <tr>
            <th>Category Type:</th>
            <th>Sequence:</th>
            <th>Actions:</th>
        </tr>
        </thead>
        <tbody>
        <% categories.forEach(function(category){ %>
        <tr>
            <td><%= category.description%></td>
            <td><%= category.sequence%></td>
            <td>
                <a class="ui tiny button edit" href="/categories/<%=category._id%>/edit">Edit</a>
                    <form class=delete-button id="delete-form" action="categories/<%=category._id %>?_method=DELETE" method="post">
                        <input  type="submit" class="ui tiny button" value="Delete">
                    </form>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    <a href="/categories/new" class="ui teal button">
        <i class="add icon"></i>Add Categories
    </a>
    <div class="ui hidden divider">
        <a href="/admin">Go Back</a>
    </div>
</div>
<% include ../partials/footer.ejs %>
</body>
</html>
